@inherits InputText

<LabelledComponent Label=@Label Context=Id>
	@if (BindOnKeypress)
	{
		<input id=@Id
			   @attributes=AdditionalAttributes
			   class=@(CssClass  + " form-control")
			   readonly=@(State.Mode == XosFormMode.View)
			   @oninput=@(e => this.CurrentValueAsString = (string)e.Value) value=@CurrentValueAsString />
	}
	else
	{
		<input id=@Id
			   @attributes=AdditionalAttributes
			   class=@(CssClass  + " form-control")
			   readonly=@(State.Mode == XosFormMode.View)
			   @onchange=@(e => this.CurrentValueAsString = (string)e.Value) value=@CurrentValueAsString />
	}
</LabelledComponent>